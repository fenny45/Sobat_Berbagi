<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6B3"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <!--arrow-->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/leftarrow"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:contentDescription="Kembali" />
        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrasi"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#A56D00"
            android:layout_marginTop="24dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Account!"
            android:textSize="15dp"
            android:textColor="#CC8800"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center" />

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="@color/light_orange">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nama -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Nama"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etNama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>

                <!-- Username -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Username"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>

                <!-- Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Password"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>

                <!-- Current Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ulangi Password"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etUlangiPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>

                <!-- Jenis Kelamin -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Jenis Kelamin"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbLaki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-Laki"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:buttonTint="#CC8800" />

                    <RadioButton
                        android:id="@+id/rbPerempuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="32dp"
                        android:buttonTint="#CC8800" />
                </RadioGroup>

                <!-- Umur -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Umur"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etUmur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>

                <!-- Alamat -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alamat"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:layout_marginBottom="30dp">

                    <EditText
                        android:id="@+id/etAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="12dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Registrasi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            card_view:cardBackgroundColor="#FFC25D"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="4dp">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Registrasi"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <!-- Link ke login -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun? Login"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
</ScrollView>
